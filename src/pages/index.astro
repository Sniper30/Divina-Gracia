---

<Layout>
	<main class="w-full h-full relative phone:px-1 tablet:px-14">
		<Hero/> 
		 <VideoThumb />
		<Sourdough />
	</main>
	<Footer delay="2500" />
</Layout>
<script>
  if ('scrollRestoration' in history) {
    history.scrollRestoration = 'manual';
  }
</script>
