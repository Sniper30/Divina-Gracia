---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="https://divina-gracia.nyc3.cdn.digitaloceanspaces.com/images/divinapng.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Divina Gracia</title>
	</head>
	<body>





		<div class="min-h-screen w-full bg-white relative ">
			{/* Amber Glow Background */}
			<div
				class="absolute inset-0 z-0"
				style={{
					backgroundImage: `
        radial-gradient(125% 125% at 50% 90%, #ffffff 40%, #f59e0b 100%)
      `,
					backgroundSize: "100% 100%",
				}}
			>
			</div>
			<div class="relative z-20 w-full h-full league-spartan-light">
				<slot/>
			</div>
		</div>
	</body>
</html>

<style>
	*::after,
	*::before,
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		
	}
	* {
  outline: 1px solid red;
}
</style>
